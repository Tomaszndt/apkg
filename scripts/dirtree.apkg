	makedir "USER:Music/Mod"

	cd "dirtree_icons" || exit 1

	makedir "apkg"

	copy "Dev.info" "SYS:/"
	copy "User.info" "SYS:/" # todo copy to actual assign

	copy "User/Doc.info" "USER:/"

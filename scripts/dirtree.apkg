	copy "User/Doc/Readme.info" "USER:Doc/"

	copy "User/Games.info" "USER:/"
	copy "User/Images.info" "USER:/"

	copy "User/Music.info" "USER:/"
	copy "User/Music/Mod.info" "USER:Music/"
	copy "User/Music/MP3.info" "USER:Music/"

	# IFS=$'\n'
	# for file in $(find User/ -type f -name "*.info"); do
	# 	copy "$file" "USER:${file#*/}"
	# done
	# unset IFS

	copy "readme.txt" "USER:Doc/Readme/$name-$version/Readme"
